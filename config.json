{
  "logging": {
    "level": "debug",
    "file_enabled": true,
    "console_enabled": true,
    "pattern": "[%T] [%l] %n: %v",
    "directory": "logs",
    "max_file_size": 52428800,
    "max_files": 10
  },
  "window": {
    "width": 1024,
    "height": 768,
    "title": "Limitless Engine",
    "fullscreen": false,
    "vsync": true,
    "resizable": true
  },
  "system": {
    "max_threads": 8,
    "working_directory": ".",
    "temp_directory": "temp",
    "log_directory": "logs"
  }
}