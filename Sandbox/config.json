{
    "logging": {
        "console_enabled": true,
        "directory": "logs",
        "file_enabled": true,
        "level": "debug",
        "max_file_size": 52428800,
        "max_files": 10,
        "pattern": "[%T] [%l] %n: %v"
    },
    "system": {
        "log_directory": "logs",
        "max_threads": 8,
        "temp_directory": "temp",
        "working_directory": "."
    },
    "window": {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Limitless Engine",
        "vsync": true,
        "width": 1280
    }
}